# CDP API Keys
CDP_API_KEY_ID=your_cdp_api_key_id_here
CDP_API_KEY_SECRET=your_cdp_api_key_secret_here
CDP_WALLET_SECRET=your_cdp_wallet_secret_here

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app-name
MONGODB_DB_NAME=your-database-name

# Server Wallet (receives payments, sends refunds, transfers Basenames)
# IMPORTANT: This wallet must:
#   1. Have USDC on Base Sepolia for refunds
#   2. Have ETH on Base Mainnet for Basename transfers (gas fees)
#   3. Own the Basename being auctioned on Base Mainnet
SERVER_WALLET_ADDRESS=0xYourServerWalletAddressHere
SERVER_WALLET_PRIVATE_KEY=0xYourServerWalletPrivateKeyHere
ADDRESS=0xYourServerWalletAddressHere


# Auction Settings
AUCTION_DURATION_MINUTES=5
STARTING_BID_USDC=1
BID_INCREMENT_USDC=1

# Network
FACILITATOR_URL=https://x402.org/facilitator

# Anthropic API Key for bidding
BID_ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Poker Game Configuration
MIN_CHIPS_REQUIRED_USDC=100  # Minimum USDC balance required to join game
SMALL_BLIND_USDC=5           # Small blind amount (in USDC)
BIG_BLIND_USDC=10            # Big blind amount (in USDC)
