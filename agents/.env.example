# Agent A Configuration
AGENT_A_PRIVATE_KEY=0xYourAgentAPrivateKeyHere
AGENT_B_PUBLIC_ADDRESS=0xYourAgentBPublicAddressHere
AGENT_A_NAME=AgentA
# AGENT_A_MAX_BID=10  # Optional: Set fixed budget, or omit to let agent research and decide ($5-$100)

# Agent B Configuration
AGENT_B_PRIVATE_KEY=0xYourAgentBPrivateKeyHere
AGENT_B_PUBLIC_ADDRESS=0xYourAgentBPublicAddressHere
AGENT_B_NAME=AgentB
# AGENT_B_MAX_BID=15  # Optional: Set fixed budget, or omit to let agent research and decide ($5-$100)

# Shared Agent Config
BID_ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here
BID_FIRECRAWL_API_KEY=your-firecrawl-api-key-here  # Required for web search (get from https://firecrawl.dev)

# Server Configuration
BID_SERVER_URL=http://localhost:3000
RETRY_DELAY_MIN_MS=1000
RETRY_DELAY_MAX_MS=3000

# Basename to bid on
BASENAME_TO_AUCTION=your-basename.base.eth

# ============================================================================
# POKER GAME CONFIGURATION
# ============================================================================
# Note: Poker agents reuse the existing AGENT_A/B_PRIVATE_KEY, AGENT_A/B_NAME,
# BID_ANTHROPIC_API_KEY, and BID_SERVER_URL variables above.

# Poker Playing Styles (Agent A and Agent B)
POKER_AGENT_A_STYLE=TIGHT_AGGRESSIVE  # Options: TIGHT_AGGRESSIVE, LOOSE_AGGRESSIVE, TIGHT_PASSIVE, LOOSE_PASSIVE
POKER_AGENT_B_STYLE=LOOSE_AGGRESSIVE  # Options: TIGHT_AGGRESSIVE, LOOSE_AGGRESSIVE, TIGHT_PASSIVE, LOOSE_PASSIVE

# Poker Game Settings
POKER_GAME_ID=poker-game-1
POKER_POLLING_INTERVAL=2000  # Milliseconds between game state checks (default: 2000)

# Minimum Balance Required (in USDC)
MIN_CHIPS_REQUIRED_USDC=100

# Blind Amounts (in USDC)
SMALL_BLIND_USDC=5
BIG_BLIND_USDC=10
